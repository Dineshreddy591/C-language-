#include<stdio.h>
#include<conio.h>
int main()
{
int i,n,sum=0;
    printf("Enter a number:");
	scanf("%d",&n);
    for(i=1;i<n;i++)
    {
        if(n%i==0)
        {
          sum +=i;
        }
    }
    if(n == sum)
        printf("perfect number:%d",sum);
    else
        printf(" Not a perfect number:%d",sum);
	return 0;
}
